<Window x:Class="Navegar.WPF.Exemple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="Navegar Exemple" Height="550" Width="850">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- Entête -->
        <Grid Grid.Row="0" Background="{StaticResource MainColor}">
            <TextBlock Text="Navegar Exemple" Foreground="White" FontSize="24pt" Margin="20,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        </Grid>

        <!-- Contenu -->
        <ContentControl Content="{Binding CurrentView}" Focusable="False" Grid.Row="1"/>

        <!-- Pied -->
        <Border Grid.Row="2" Background="{StaticResource MainColor}" />
    </Grid>
</Window>
