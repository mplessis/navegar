<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xaml="clr-namespace:Windows.UI.Xaml;assembly=Windows.Foundation.UniversalApiContract"
    xmlns:controls="clr-namespace:Windows.UI.Xaml.Controls;assembly=Windows.Foundation.UniversalApiContract"
    xmlns:converters="using:Navegar.UWP.Exemple.CRM.Converters">

    <SolidColorBrush x:Name="BackgroundPage" Color="#407aae" />
    <SolidColorBrush x:Name="BackgroundBottomAppBar" Color="#21629b" />

    <Style x:Key="LabelTextBox" TargetType="TextBlock">
        <Setter Property="Foreground" Value="white" />
        <Setter Property="FontSize" Value="21.333" />
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>

    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:StringFormatConverter x:Key="StringFormatConverter"/>
</ResourceDictionary>
